        script(src='bootflat/js/bootstrap-tagsinput.min.js')
        script(src='bootflat/js/bootstrap-tagsinput-angular.js')
        script(src='bootflat/js/custom.js')

        body(ng-app='UserAccount')
            div(ng-controller='ActiveJobsController as activeJobsCtrl')
                form(ng-submit='createNewJob()')
                    //| job assignee
                    //input(ng-model='jobData.jobAssignee', type='text')
                    |         Title
                    input(ng-model='jobData.title', type='text')
                    |         Description
                    input(ng-model='jobData.description', type='text')
                    //|         price
                    //input(ng-model='jobData.price', type='text')
                    |         Period From
                    input(ng-model='jobData.startDate', type='date')
                    |         To
                    input(ng-model='jobData.endDate', type='date')
                    |         category
                    select(data-ng-model='jobData.category', data-ng-options="a.name group by a.type for a in activities")
                    |   city
                    input(ng-model='jobData.city', type='text')
                    |   state
                    input(ng-model='jobData.state', type='text')
                    |   country
                    input(ng-model='jobData.country', type='text')
                    |   zipCode
                    input(ng-model='jobData.zipCode', type='text')
                    button(type='submit') Create Your Job

