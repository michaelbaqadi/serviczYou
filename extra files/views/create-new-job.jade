        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular-animate.js')
        script(src='//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.14.3.js')

        //Active Job + Jobs History
        script(src= "/controllers/Account-Profile-Active-Jobs/account-profile-active-jobs.client.controller.js")
